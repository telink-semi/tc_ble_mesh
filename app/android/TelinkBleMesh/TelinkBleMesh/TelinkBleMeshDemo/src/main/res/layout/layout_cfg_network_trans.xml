<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmit Count(3 bits): 0x"
            android:textSize="@dimen/info_text_size" />

        <EditText
            android:id="@+id/et_trans_cnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/hex_input"
            android:textSize="@dimen/msg_input_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transmit Interval Steps(5 bits): 0x"
            android:textSize="@dimen/info_text_size" />

        <EditText
            android:id="@+id/et_trans_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/hex_input"
            android:textSize="@dimen/msg_input_size" />

    </LinearLayout>
</LinearLayout>